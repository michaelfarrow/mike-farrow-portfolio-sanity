{
  "name": "mike-farrow",
  "private": true,
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "predev:app": "cp .env.local app/.env.local",
    "predev:studio": "cp .env.local studio/.env.local",
    "watch:schemas": "chokidar ./studio/schemas --initial -c 'npm run generate:schema -w studio'",
    "watch:queries": "chokidar ./common/sanity.json ./app/src/lib/sanity/queries -c 'npm run generate:types -w studio'",
    "dev:common": "concurrently --names 'watch queries' \"npm run watch:queries\"",
    "dev:app": "concurrently --names 'main' \"npm run dev -w app\"",
    "dev:studio": "concurrently --names 'main,watch schemas' \"npm run dev -w studio\" \"npm run watch:schemas\"",
    "dev": "concurrently --prefix ' {name} ' -c 'bgGreen.bold,bgRed.bold,bgMagenta.bold' --names 'studio,app   ,common' \"npm run dev:studio\" \"npm run dev:app\" \"npm run dev:common\""
  },
  "workspaces": [
    "studio",
    "app"
  ],
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "change-case": "^5.4.4",
    "get-youtube-id": "^1.0.1",
    "lodash": "^4.17.21",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "title-case": "^4.3.2"
  }
}
