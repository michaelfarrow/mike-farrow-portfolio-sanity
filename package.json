{
  "name": "mike-farrow",
  "private": true,
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild:all": "npm run generate:schema && npm run generate:types",
    "prebuild:app": "npm run prebuild:all && npm run generate:app-assets",
    "prebuild:studio": "npm run prebuild:all && npm run generate:studio-assets",
    "build:app": "npm run -w app build",
    "build:studio": "npm run -w studio build",
    "predev:app": "cp .env.local app/.env.local && npm run generate:app-assets",
    "predev:studio": "cp .env.local studio/.env.local && npm run generate:studio-assets",
    "watch:schemas": "chokidar ./studio/schemas --initial -c 'npm run generate:schema'",
    "watch:queries": "chokidar ./common/sanity.json ./app/src/lib/sanity/queries -c 'npm run generate:types'",
    "dev:common": "concurrently --names 'watch queries' \"npm run watch:queries\"",
    "dev:app": "concurrently --names 'main' \"npm run dev -w app\"",
    "dev:studio": "concurrently --names 'main,watch schemas' \"npm run dev -w studio\" \"npm run watch:schemas\"",
    "dev": "concurrently --prefix ' {name} ' -c 'bgGreen.bold,bgRed.bold,bgMagenta.bold' --names 'studio,app   ,common' \"npm run dev:studio\" \"npm run dev:app\" \"npm run dev:common\"",
    "generate:app-assets": "cp -r common/static/favicon* app/src/app",
    "generate:studio-assets": "cp -r common/static/* studio/static",
    "generate:schema": "npm run generate:schema -w studio",
    "generate:types": "npm run generate:types -w studio",
    "generate:favicons": "npm create favicon common/assets/logo.svg common/static -- --overwrite --no-warn"
  },
  "workspaces": [
    "studio",
    "app"
  ],
  "dependencies": {
    "change-case": "^5.4.4",
    "get-youtube-id": "^1.0.1",
    "lodash": "^4.17.21",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "title-case": "^4.3.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-plugin-css-modules": "^5.2.0"
  }
}
