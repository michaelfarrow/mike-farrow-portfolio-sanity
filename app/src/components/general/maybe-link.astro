---
import type { ComponentPropsWithoutRef } from 'react';

export interface Props extends ComponentPropsWithoutRef<'a'> {
  children?: string;
  name?: string;
  shortName?: string;
  url?: string;
}

const { children, name, shortName, url, className, ...rest } = Astro.props;

const content = children || name || shortName || name;
const El = url ? 'a' : 'span';
---

{
  (content && (
    <El {...(url ? (rest as any) : {})} href={url} class={className}>
      {content}
    </El>
  )) ||
    null
}
