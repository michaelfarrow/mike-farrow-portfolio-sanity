---
import type { ComponentPropsWithoutRef } from 'react';

import { hasSlot } from '@app/lib/astro';

export interface Props extends ComponentPropsWithoutRef<'a'> {
  name?: string;
  shortName?: string;
  url?: string;
}

const { name, shortName, url, className, ...rest } = Astro.props;

const content = name || shortName;
const El = url ? 'a' : 'span';
---

{
  (content && (
    <El {...(url ? (rest as any) : {})} href={url} class={className}>
      {(await hasSlot(Astro.slots, 'default')) ? <slot /> : content}
    </El>
  )) ||
    null
}
